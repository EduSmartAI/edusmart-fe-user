        "tags": [
          "Cart"
        ],
        "summary": "Add course to cart",
        "description": "Add a course into current user's cart",
        "consumes": [
          "application/json",
          "text/json",
          "application/*+json"
        ],
        "produces": [
          "text/plain",
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/AddToCartRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/AddToCartResponse"
            }
          }
        }
      }
    },
    "/api/v1/Order/InsertOrder": {
