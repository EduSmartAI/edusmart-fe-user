{
  "swagger": "2.0",
  "info": {
    "title": "Auth Service",
    "version": "v1"
  },
  "basePath": "/auth",
  "paths": {
    "/api/v1/Account/insert-account": {
      "post": {
        "tags": [
          "Account"
        ],
        "consumes": [
          "application/json",
          "text/json",
          "application/*+json"
        ],
        "produces": [
          "text/plain",
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
