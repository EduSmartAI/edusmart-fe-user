  "definitions": {
    "AccountInsertCommand": {
      "required": [
        "email",
        "firstName",
        "lastName",
        "password"
      ],
      "type": "object",
      "properties": {
        "email": {
          "format": "email",
          "default": "edusmartAI@gmail.com",
          "maxLength": 255,
          "minLength": 0,
          "type": "string"
        },
        "password": {
          "default": "Edusmart@123",
          "maxLength": 100,
          "minLength": 6,
          "type": "string"
        },
        "firstName": {
          "default": "Edu",
          "maxLength": 50,
          "minLength": 2,
          "pattern": "^[\\p{L}\\s]+$",
          "type": "string"
        },
        "lastName": {
          "default": "Smart",
          "maxLength": 50,
          "minLength": 2,
          "pattern": "^[\\p{L}\\s]+$",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "AccountInsertResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean"
        },
        "messageId": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "detailErrors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/DetailError"
          }
        },
        "response": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "AccountVerifyCommand": {
      "required": [
        "key"
      ],
      "type": "object",
      "properties": {
        "key": {
          "minLength": 1,
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "AccountVerifyResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean"
        },
        "messageId": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "detailErrors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/DetailError"
          }
        },
        "response": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "DetailError": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string"
        },
        "messageId": {
          "type": "string"
        },
        "errorMessage": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "TokenVerifyResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean"
        },
        "messageId": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "detailErrors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/DetailError"
          }
        },
        "response": {
          "$ref": "#/definitions/TokenVerifyResponseEntity"
        }
      },
      "additionalProperties": false
    },
    "TokenVerifyResponseEntity": {
      "type": "object",
      "properties": {
        "userId": {
          "format": "uuid",
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "avatarUrl": {
          "type": "string"
        }
      }
    },
      "additionalProperties": false
    }
  },
  "securityDefinitions": {
    "JWT_Token": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Copy this into the value field: Bearer {token}"
    }
  },
  "security": [
    {
      "JWT_Token": [ ]
    }
  ]
